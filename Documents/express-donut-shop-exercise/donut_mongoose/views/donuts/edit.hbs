<main>

	<h2>EDIT THIS DONUT!</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="donut-container-show">


		<form action="/{{donut._id}}?_method=PUT" method="POST">
			<input type="text" name="name" placeholder={{donut.name}}>
			<input type="text" name="description" placeholder={{donut.description}}>
			<input type="text" name="img" placeholder={{donut.img}}>
			<input type="number" name="price" placeholder={{donut.price}}>
			<input type="number" name="qty" placeholder={{donut.qty}}>
			<input type="submit" value="Submit">
		</form>


		<div id="img-preview">
			<img src="{{donut.img}}">
		</div>

	</div>
</main>